{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 960,
  "height": 500,
  "autosize": "none",
  "data": [
    {
      "name": "losses",
      "url": "https://raw.githubusercontent.com/Gobisan/git-rep/master/losses2015_transformed.csv",
      "format": {"type": "csv", "parse": "auto", "delimiter": ","},
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["State_Code"],
          "fields": ["Amount"],
          "ops": ["sum"],
          "as": ["Amount"]
        }
      ]
    },
    {
      "name": "states",
      "url": "https://raw.githubusercontent.com/Gobisan/git-rep/master/us-10m.json",
      "format": {"type": "topojson", "feature": "states"},
      "transform": [
        {
          "type": "lookup",
          "from": "losses",
          "key": "State_Code",
          "fields": ["id"],
          "values": ["Amount"]
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "type": "albersUsa"
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "quantize",
      "domain": [0, 50000000],
      "range": {"scheme": "blues", "count": 7}
    }
  ],
  "marks": [
    {
      "type": "shape",
      "from": {"data": "states"},
      "encode": {
        "enter": {"tooltip": {"signal": "format(datum.Amount,'1')"}},
        "update": {"fill": {"scale": "color", "field": "Amount"}},
        "hover": {"fill": {"value": "red"}}
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "config": {}
}